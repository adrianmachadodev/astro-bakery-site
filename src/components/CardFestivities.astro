---
interface Props {
  name: string;
  image: string;
}

const { name, image } = Astro.props;
---

<div class="w-80 h-80 col-span-1 group relative mb-3 overflow-hidden rounded-2xl">
  <!-- Capa de color con opacidad -->
  <div
    class="w-full h-72 bg-amber-500 absolute overflow-hidden bottom-0 left-0 opacity-0 group-hover:-translate-y-0 transition group-hover:opacity-40 mask-t-from-0 rounded-2xl z-10"
  >
  </div>

  <!-- Texto independiente (no afectado por opacity del overlay) -->
  <span
    class="absolute bottom-2 left-2 z-10 text-white transition opacity-0 group-hover:opacity-100 group-hover:-translate-y-1 font-[glonto] text-xl"
  >
    {name}
  </span>

  <picture class="w-full h-auto rounded-2xl">
    <img class="rounded-2xl group-hover:scale-105 group-hover:transition-all ease-in duration-75" src={image} alt="" />
  </picture>
</div>
