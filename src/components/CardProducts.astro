---
interface Props {
  name: string;
  description: string;
  image: string;
}

const { name, description, image } = Astro.props;
---

<div
  class="w-96 h-[450px] group pb-3 rounded-md flex flex-col gap-2 bg-white  shadow-lg mb-5"
>
  
  <!-- Image -->
  <div class="w-full h-56 overflow-hidden bg-amber-300">
    <picture>
      <img
        class="w-full h-full group-hover:scale-105 hover:transition-all ease-in duration-75 object-cover"
        src={image}
        alt=""
      />
    </picture>
  </div>
  <!-- name  -->
  <div
    class="w-full h-10 p-3 flex group-hover:text-yellow-700 group-hover:transition-all ease-in-out duration-150"
  >
    <h3 class="font-[harring] uppercase">
      {name}
    </h3>
  </div>
  <!-- Description -->
  <div class="w-full min-h-20 text-balance font-[bilmond] text-neutral-400 mb-2 p-3">
    {description}
  </div>
</div>
