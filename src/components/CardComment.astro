---
interface Props {
  initialName: string;
  user: string;
  comment: string;
}

const { user, comment, initialName } = Astro.props;
---

<div
  class="w-80 h-40 bg-white shadow-md rounded flex flex-row flex-wrap justify-center items-center p-3"
>
  <!-- Body comments -->
  <div class="w-100 flex h-4">
    <picture class="opacity-20">
      <img
        src="../../public/images/svg/quote.png"
        height="30"
        width="30"
        alt=""
      />
    </picture>
  </div>

  <div class="w-44 h-10 flex flex-row justify-around mt-2">
    <p class="text-neutral-500 w-full font-[bilmond] text-center">
      {comment}
    </p>
  </div>

  <div
    class="w-full h-14 flex flex-row justify-around border-t border-t-neutral-100 p-2"
  >
    <!-- Icon profile -->
    <div
      class="w-11 h-11 rounded-full bg-[#c78622] text-white flex text-center items-center justify-center"
    >
      {initialName}
    </div>
    <!-- Name profile -->
    <div class="w-32 h-11 flex items-center text-neutral-500">
      {user}
    </div>
    <!-- icon comments -->
  </div>
</div>
